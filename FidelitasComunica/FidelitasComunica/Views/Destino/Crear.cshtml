@model FidelitasComunica.Models.Destino
@{
    ViewData["Title"] = "Destinos de viajes";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Paquetes - Elije el que mejor se adapte a tus gustos</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Navbar Start -->
    <div class="container-fluid position-relative nav-bar p-0">
        <div class="container-lg position-relative p-0 px-lg-3" style="z-index: 9;">
            <nav class="navbar navbar-expand-lg bg-light navbar-light shadow-lg py-3 py-lg-0 pl-3 pl-lg-5">
                <a href="" class="navbar-brand">
                    <h1 class="m-0 text-primary"><span class="text-dark">Fidélitas </span>Comunica</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
               
            </nav>
        </div>
    </div>
    <!-- Navbar End -->
    <!-- Header Start -->
    <div class="container-fluid page-header">
        <div class="container">
            <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
                <h3 class="display-4 text-white text-uppercase">Destinos</h3>
                <div class="d-inline-flex text-white">
                    <p class="m-0 text-uppercase"><a class="text-white" href="">Destinos</a></p>
                    <i class="fa fa-angle-double-right pt-1 px-3"></i>
                    <p class="m-0 text-uppercase">Crear Destino Nuevo</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Header End -->
    <!-- Packages Start -->
    <br>
    <h3>Crear Destino Nuevo</h3>
    <hr />

    <form asp-action="Crear" class="row">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="col-md-6 col-sm-12 form-group">
            <label asp-for="nombre"></label>
            <input asp-for="nombre" type="text" class="form-control" />
            <span asp-validation-for="nombre"></span>
        </div>
        <div class="col-md-6 col-sm-12 form-group">
            <label asp-for="ciudad"></label>
            <input asp-for="ciudad" type="text" class="form-control" />
            <span asp-validation-for="ciudad"></span>
        </div>

        <div class="col-md-6 col-sm-12 form-group">
            <label asp-for="pais"></label>
            <input asp-for="pais" type="text" class="form-control" />
            <span asp-validation-for="pais"></span>
        </div>

        <div class="col-md-6 col-sm-12 form-group">
            <label asp-for="clima"></label>
            <input asp-for="clima" type="text" class="form-control" />
            <span asp-validation-for="clima"></span>
        </div>

        <div class="col-md-6 col-sm-12 form-group">
            <label asp-for="descripcion"></label>
            <input asp-for="descripcion" type="text" class="form-control" />
            <span asp-validation-for="descripcion"></span>
        </div>

        <div class="col-md-6 col-sm-12 form-group">
            <label asp-for="atracciones"></label>
            <input asp-for="atracciones" type="text" class="form-control" />
            <span asp-validation-for="atracciones"></span>
        </div>

        <div class="col-md-6 col-sm-12 form-group">
            <label asp-for="moneda"></label>
            <input asp-for="moneda" type="text" class="form-control" />
            <span asp-validation-for="moneda"></span>
        </div>

        <div class="col-md-6 col-sm-12 form-group">
            <label asp-for="idioma_principal"></label>
            <input asp-for="idioma_principal" type="text" class="form-control" />
            <span asp-validation-for="idioma_principal"></span>
        </div>

        <div class="col-md-6 col-sm-12 form-group">
            <label asp-for="imagen"></label>
            <input asp-for="imagen" type="text" class="form-control" />
            <span asp-validation-for="imagen"></span>
        </div>


        <div class="pt-4 form-group">
            <input type="submit" value="Crear" class="btn btn-success" />
        </div>
    </form>
    <br />
    <a asp-action="Index">Volver</a>






    <div class=" bg-dark text-white border-top py-4" style="border-color: rgba(256, 256, 256, .1) !important;">
        <div class="row" style="text-align:center">
            <div class="col-lg-6 text-center text-md-left mb-3 mb-md-0">
                <p class="m-0 text-white-50">
                    Copyright &copy; Fidélitas Comunica 2023.
                </p>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/ js/main.js"></script>






</body>

</html>