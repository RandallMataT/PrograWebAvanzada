                    </th>
                    <th>
                        @Html.DisplayNameFor(model=> model.cantidad_personas)
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.destino)
                        </th>
                        <th>
