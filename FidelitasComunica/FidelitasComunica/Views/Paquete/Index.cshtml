    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model=> model.destino)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.duracion_dias)
                    </th>
                    <th>
